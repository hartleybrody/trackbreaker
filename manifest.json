{
  "manifest_version": 2,

  "name": "TrackBreaker",
  "description": "Read your emails discreetly.",
  "version": "1.0.0.0",

  "icons": {
    "256": "images/big-logo.jpg",
    "128": "images/medium-logo.jpg",
    "64": "images/small-logo.jpg",
    "48": "images/very-small-logo.jpg",
    "16": "images/tiny-logo.jpg"
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*",
    "tabs",
    "storage"
  ],

  "background": {
    "page": "background.html"
  }

}